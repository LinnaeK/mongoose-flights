<%- include('../partials/header') %>
        <table class = "table">
            <thead class="thead-light">
                <tr>
                    <th colspan ="2">
                        Flight Information
                    </th>
                </tr>
            </thead>
            <tr>

                <th scope ="col">Airline:</th>
                <td><%=flight.airline%></td>
            </tr>
            <tr>
                <th scope="row">FlightNo:</th>
                <td><%=flight.flightNo%></td>
            </tr>
            <tr>
                <th scope="row">Departs:</th>
                <td><%=flight.departs%></td>
            </tr>
            <tr>
                <th scope = "row">Departure Airport:</th>
                <td><%=flight.airport%></td>
            </tr>
        </table>
        <br><br>
        <%if (flight.destinations.length){%>
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>Destination</th>
                        <th>Arrival Time</th>
                    </tr>
                </thead>
                <tbody>
                    <%flight.destinations.forEach(function(f){%>
                        <tr>
                            <td><%=f.airport%></td>
                            <td><%=f.arrival%></td>
                        </tr>
                    <%})%>
                </tbody>
            </table>
            <%}%>
            <br><br>
            <%if(tickets.length) {%>
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th scope = "col">Seat</th>
                            <th scope = "col">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%tickets.forEach(function(t){%>
                        <tr>
                            <td>
                                <%=t.seat%>
                            </td>
                            <td>
                                <%=t.price%>
                            </td>
                        </tr>
                        <%})%>
                    </tbody>
                </table>
                <%}%>
                <a href= "<%=flight._id%>/tickets/new"><button class="btn-info">New Ticket</button></a>
    </section>
    <br><br>
    <h2>Add Destinations</h2>
    <form id="add-destination-form" method="POST"
    action="/flights/<%=flight._id%>/destinations">
    <div class="form-group">
        <label>Arrival:</label>
        <select name="airport">
            <option value="AUS">AUS</option>
            <option value="SEA">SEA</option>
            <option value="SAN">SAN</option>
            <option value="DAL">DAL</option>
            <option value="LAX">LAX</option>
        </select>
        </div>
        <div class="form-group">
            <label>Arrival Time:</label>
            <input type="datetime-local" name="arrival" class="form-control">
        </div>
        <input type="submit" value="Add Destination" class="btn-info">
    </form>
    <%- include('../partials/footer') %>